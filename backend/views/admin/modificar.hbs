<div class="container" style="margin-top:100px;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar una Novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo"
                        value="{{novedad.titulo}}">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Subtitulo"
                        name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Cuerpo"
                        name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <div class="mb-3 row">
                    <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
                </div>
                <div class="mb-3 row">
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                        Eliminar imagen actual?</label>
                    <input type="hidden" value="{{novedad.img_id}}" name="img_original">
                </div>
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            </form>
            {{#if error}}
            <p style="color: red;">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>